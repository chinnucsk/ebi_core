{require_otp_vsn, "R15"}.
{erl_opts, [
    debug_info, fail_on_warning
]}.
{deps, [
    {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "1.2.1"}}},
    {meck,  ".*", {git, "https://github.com/eproxus/meck.git", {tag, "0.7.2"}}}
]}.
{port_env, [
    {"CFLAGS", "$CFLAGS -g -O3 -Wall"},
    {"LDFLAGS", "$LDFLAGS -lstdc++ -lerl_interface -lei -lpthread"}
]}.
{port_specs, [
    {"priv/ebi_solver_port", ["ebi_solver_port/*.cxx"]}
]}.
{cover_enabled, true}.
{ct_dir, "itest"}.
